{
    "swagger": "2.0",
    "info": {
      "title": "DnD AI API",
      "description": "API for DnD AI WebApp",
      "version": "1.0.0"
    },
    "host": "localhost:5000",
    "schemes": [
      "http"
    ],
    "paths": {
      "/query": {
        "post": {
          "summary": "Send a query",
          "description": "Send a query to the backend and get a response",
          "parameters": [
            {
              "in": "body",
              "name": "query",
              "description": "User input",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "userInput": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  